<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textview_numero_joueur"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textview_nom_joueur"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textview_nom_joueur"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/textview_temps_penalite"
        android:layout_toStartOf="@+id/textview_numero_joueur"
        android:layout_marginTop="8dp"
        android:layout_marginRight="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pénalité"
        android:id="@+id/button_penalite"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="But"
        android:id="@+id/button_but"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_penalite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textview_temps_penalite"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assist"
        android:id="@+id/button_assist"
        android:layout_alignBottom="@+id/button_but"
        android:layout_toEndOf="@+id/button_but" />
</RelativeLayout>